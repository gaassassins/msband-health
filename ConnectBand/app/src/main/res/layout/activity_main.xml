<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kamill.connectband.MainActivity"
    android:background="@">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Consent"
        android:id="@+id/btnConsent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Heart Rate"
        android:id="@+id/btnStart"
        android:layout_below="@+id/btnConsent"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnConsent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartRate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnStart"
        android:layout_above="@+id/btnStart"
        android:layout_below="@+id/btnStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Accelerometer"
        android:id="@+id/btnAcc"
        android:layout_below="@+id/txtStatus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtStatus"
        android:layout_alignTop="@+id/heartRate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAcc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:id="@+id/btnGyro"
        android:layout_below="@+id/txtAcc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtGyro"
        android:layout_below="@+id/btnGyro"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
